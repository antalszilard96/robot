{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Create robot</h3> 
        <div class="col-md-6 offset-md-3">
            {{form_start(form)}}
                <div class="form-group">
                    {{form_label(form.name)}}
                    {{form_widget(form.name,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_label(form.type)}}
                    {{form_widget(form.type,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    {{form_label(form.strenght)}}
                    {{form_widget(form.strenght,{'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Create</button>
                </div>
            {{form_end(form)}}
        </div>
    </div>
    <a class="btn btn-dark" href="{{ path('main')}}">Back</a>
</div>
{% endblock body %}